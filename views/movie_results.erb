
<% @movies.each do |movie| %>
<% p movie %>
<li><a href="/movie/<%= movie['id'] %>"><%= movie['title'] %> (<%= movie['year'] %>)</a></li>
<% end  %>

<hr/>

<% if @q %>
<form action="/import" method="post">
  <label for="import_q">Search</label>
  <input type="text" name="q" value="<%= @q %>" placeholder="Search Term"/>
  <input type="submit" value="Import from OMDB"/>
</form>
<% end %>